inline fun <reified T: Number> getList(item : T ): List<T>{
    var list : MutableList<T> = mutableListOf()
    list.add(item)
  return list
}

//Generc function
 fun <T> getListItem(item : T ): List<T>{
    var list : MutableList<T> = mutableListOf()
    list.add(item)
  return list
}
 
 //Genric class
 class Machine<T>(vararg types : T){
     var typeList = types.toMutableList()
     
     fun addMachine(type : T):List<T>{
         typeList.add(type)
        	return typeList
     }
     
 }
 

class User(var name : String, var age : Int)
